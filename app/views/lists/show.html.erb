<%= render "banner" %>
<div class="container">

  <h1> <%= @list.name %> </h1>

<ul>
  <% @list.movies.each do |movie| %>
  <li>
  <%= movie.title %> |
  <% movie.bookmarks.each do |bookmark|%>
  <%= bookmark.comment %> |
   <%= link_to "Delete bookmark", bookmark_path(bookmark), method: :delete %>
  <% end %>
  <% end %>
  </li>
</ul>

  <hr>


  <h2>Add a bookmark</h2>

  <%= render "/bookmarks/form", list: @list, bookmark: @bookmark %>
</div>
