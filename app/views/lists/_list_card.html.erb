<div class="row align-items-start">
  <% @lists.each do |list| %>
    <div class="col mb-3">
      <div class="card list-card" style="width: 18rem;">
        <%= link_to list_path(list) do %>
          <%= image_tag "https://source.unsplash.com/1600x900/?#{list.name.downcase}", alt: " List category: #{list.name}", class: 'card-img-top card-img' %>
        <% end %>
        <div class="card-body list-card-body">
        <h5 class="card-title list-card-title"><%= link_to list.name, list_path(list) %></h5>
        <p class="card-text list-card-text">
        </p>
      </div>
      </div>
    </div>
  <% end %>
</div>
