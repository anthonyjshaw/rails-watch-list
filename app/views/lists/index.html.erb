<h1>Lists</h1>


<% @lists.each do |list| %>


<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
    <p class="card-text">
      <ul>
      <% list.movies.each do |movie| %>
        <li><%= movie.title %></li>
        <% end %>
        </ul>
      </p>
  </div>
</div>

<% end %>
